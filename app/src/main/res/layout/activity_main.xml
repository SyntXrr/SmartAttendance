<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/smartatt" />

        <ImageView
            android:id="@+id/img_tec"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/teacher" />

        <Button
            android:id="@+id/btn_teach_lgn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="#243470"
            android:fontFamily="@font/roboto"
            android:padding="0dp"
            android:text="Teacher Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/img_tec"
            app:layout_constraintStart_toStartOf="@+id/img_tec"
            app:layout_constraintTop_toBottomOf="@+id/img_tec" />

        <Button
            android:id="@+id/btn_std_lgn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="#243470"
            android:fontFamily="@font/roboto"
            android:padding="0dp"
            android:text="Student Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/img_std"
            app:layout_constraintStart_toStartOf="@+id/img_std"
            app:layout_constraintTop_toBottomOf="@+id/img_std" />

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="#243470"
            android:fontFamily="@font/roboto"
            android:text="Registration"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/img_reg"
            app:layout_constraintStart_toStartOf="@+id/img_reg"
            app:layout_constraintTop_toBottomOf="@+id/img_reg" />

        <ImageView
            android:id="@+id/img_reg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_tec"
            app:layout_constraintEnd_toStartOf="@+id/img_tec"
            app:layout_constraintTop_toTopOf="@+id/img_tec"
            app:srcCompat="@drawable/reg" />

        <ImageView
            android:id="@+id/img_std"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_tec"
            app:layout_constraintStart_toEndOf="@+id/img_tec"
            app:layout_constraintTop_toTopOf="@+id/img_tec"
            app:srcCompat="@drawable/student" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>