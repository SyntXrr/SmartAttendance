<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/registration"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Name"
            android:textColor="#243470"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <EditText
            android:id="@+id/std_first_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:cursorVisible="true"
            android:hint="First"
            android:inputType="textCapCharacters"
            android:paddingLeft="5dp"
            android:textColor="#233470"
            android:textColorHint="#233470"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/std_last_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:ems="10"
            android:hint="Last"
            android:inputType="textCapCharacters"
            android:paddingLeft="5dp"
            android:textColor="#233470"
            android:textColorHint="#233470"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/std_first_name"
            app:layout_constraintStart_toStartOf="@+id/std_first_name"
            app:layout_constraintTop_toBottomOf="@+id/std_first_name"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Email"
            android:textColor="@color/app_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/std_last_name"
            app:layout_constraintTop_toBottomOf="@+id/std_last_name" />

        <EditText
            android:id="@+id/std_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/app_color"
            android:textColorHint="@color/app_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:padding="0dp"
            android:text="Student PRN"
            android:textColor="#233470"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/std_email" />

        <EditText
            android:id="@+id/std_prn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:ems="10"
            android:hint="PRN"
            android:inputType="number|text|textEmailAddress"
            android:paddingLeft="5dp"
            android:textColor="#233470"
            android:textColorHint="#233470"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:cursorVisible="false" />

        <EditText
            android:id="@+id/std_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColor="#233470"
            android:textColorHint="#233470"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/std_cnf_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Confirm Password"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColor="#233470"
            android:textColorHint="#233470"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/std_password"
            app:layout_constraintStart_toStartOf="@+id/std_password"
            app:layout_constraintTop_toBottomOf="@+id/std_password" />

        <Button
            android:id="@+id/btn_login_std"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#233470"
            android:fontFamily="@font/roboto"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/std_cnf_password"
            app:layout_constraintStart_toStartOf="@+id/std_cnf_password"
            app:layout_constraintTop_toBottomOf="@+id/std_cnf_password" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Password"
            android:textColor="#233470"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/std_course" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:text="Class"
            android:textColor="#233470"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/std_prn"
            app:layout_constraintTop_toBottomOf="@+id/std_prn" />

        <EditText
            android:id="@+id/std_course"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boxborder"
            android:ems="10"
            android:hint="Course"
            android:inputType="textCapCharacters"
            android:textColor="#233470"
            android:textColorHint="#233470"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
